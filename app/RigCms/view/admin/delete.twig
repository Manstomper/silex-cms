{% extends 'admin/base.twig' %}

{% block content %}
	<div class="col-md-6 col-md-offset-3">
		<p id="confirm-delete"><b>Permanently delete {{ type }}</b> {{ identifier|concat(100) }}?</p>
		<form method="post" action="" accept-charset="utf-8">
			<button class="btn btn-danger" type="submit" aria-labelledby="confirm-delete">Delete {{ type }}</button>
		</form>
	</div>
{% endblock %}

{% block title %}Delete {{ type }}{% endblock %}