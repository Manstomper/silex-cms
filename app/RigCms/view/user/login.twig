{% extends 'admin/base.twig' %}

{% block content %}
	<div class="container">
		<form id="login-form" class="col-md-4 col-md-offset-4" action="{{ site.path }}/login_check/" method="post" accept-charset="utf-8">
			<label class="form-group">Email
				<input class="form-control" type="email" name="_username" value="{{ email }}" required autofocus>
			</label>
			<label class="form-group">Password
				<input class="form-control" type="password" name="_password" required>
			</label>
			<div class="form-group">
				<button class="btn btn-success" type="submit">Sign in</button>
			</div>
		</form>
	</div>
{% endblock %}

{% block nav %}
	{% include 'admin/partial/navigation.twig' %}
{% endblock %}

{% block subnav %}
	<a href="{{ site.path }}/reset-password/">Reset password</a>
{% endblock %}